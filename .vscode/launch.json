  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test selected Jest in `rollup-plugin`",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/rollup-plugin",
      "runtimeArgs": [
        "${workspaceRoot}/packages/rollup-plugin/node_modules/jest/bin/jest.js",
        "--runInBand",
        "${relativeFile}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
  ]
}
